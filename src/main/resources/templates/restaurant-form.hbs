{{#partial "content"}}

   {{#if editRestaurant}}
       <form action="restaurants/{{editRestaurant.Id}}/update" method="post"> <!--fix-->
       <h1>Edit this Restaurant!</h1>
       <select id="restaurantToEditId" name="restaurantToEditId">
       {{#each restaurants }}
               <option value="{{id}}">{{name}}</option>
       {{/each}}
       </select>
       <br>
           <label for="name">Edit this restaurant's name</label>
           <input id="name" name="name" type="text" placeholder="Enter a new name">
           <br>
           <label for="cuisineId">Update this restaurant's cuisine:</label>
           <select id="cuisineId" name="cuisineId">
               {{#each cuisines}}
                   <option value="{{cuisine.id}}">{{type}}</option>
               {{/each}}
           </select>
           <p>Don't see the right cuisine?<a href="/cuisines/new">Add a new one first.</a></p>

   {{else}}
           <h2>Add a new Restaurant!</h2>

       <form action="/restaurants/new" method="post">
       {{#if cuisines}}
           <label for="name">Restaurant Name</label>
           <input id="name" name="name" type="text">
           <label for="cuisineId">Cuisine type of this restaurant:</label>

           <select id="cuisineId" name="cuisineId">

               {{#each cuisines}}
                   <option value="{{id}}" {{#selected}}selected="selected"{{/selected}}>{{type}}</option> <!--what is going on here? -->
               {{/each}}
           </select>
           <p>Don't see the right cuisine?<a href="/cuisines/new">Add a new one first.</a></p>
       {{else}}
           <h3> You'll need to add a cuisine before you add a restaurant. <a href="/cuisines/new">Add one here.</a> </h3>
       {{/if}}

   {{/if}}
       <button type="submit" class="btn btn-default">Go!</button>
   </form>
{{/partial}}

{{> layout.hbs}}